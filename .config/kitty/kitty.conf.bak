# --- Appearance ---
font_family      JetBrainsMono Nerd Font
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        12.0

# Window Padding (gives the text some breathing room)
window_padding_width 10

# Transparency (0.0 to 1.0)
background_opacity 0.90
dynamic_background_opacity yes

# Hide the title bar (Linux/macOS)
hide_window_decorations yes

# --- Cursor & Mouse ---
cursor_shape beam
cursor_blink_interval 0.5
mouse_hide_wait 3.0
url_color #0087bd
url_style curly

# --- Terminal Bell ---
enable_audio_bell no

# --- Window Management ---
# Use the 'splits' layout to divide your screen
enabled_layouts splits,stack

# Open new split with Cmd+D (macOS) or Ctrl+Shift+D (Linux)
map ctrl+shift+d launch --location=vsplit
map ctrl+shift+e launch --location=hsplit

# Switch between windows using Ctrl+Shift+Arrow keys
map ctrl+shift+left neighboring_window left
map ctrl+shift+right neighboring_window right
map ctrl+shift+up neighboring_window up
map ctrl+shift+down neighboring_window down

# --- Tabs ---
tab_bar_style powerline
tab_powerline_style slanted
active_tab_foreground   #000
active_tab_background   #eee
inactive_tab_foreground #444
inactive_tab_background #999

# --- Performance ---
repaint_delay 10
input_delay 3
sync_to_monitor yes
