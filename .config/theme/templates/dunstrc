[global]
    # Display
    monitor = 0
    follow = mouse

    # Geometry
    width = (280, 400)
    height = 180
    origin = top-right
    offset = 16x16
    notification_limit = 5
    gap_size = 8

    # Progress bar
    progress_bar = true
    progress_bar_height = 12
    progress_bar_frame_width = 1
    progress_bar_min_width = 200
    progress_bar_max_width = 360
    progress_bar_corner_radius = 4
    highlight = "@ACCENT@"

    # Appearance
    transparency = 0
    corner_radius = 12
    frame_width = 2
    frame_color = "@ACCENT@"
    separator_height = 2
    separator_color = frame
    padding = 14
    horizontal_padding = 14
    text_icon_padding = 14

    # Text
    font = JetBrainsMono Nerd Font 11
    line_height = 4
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    indicate_hidden = yes

    # Icons
    icon_position = left
    min_icon_size = 32
    max_icon_size = 48
    icon_corner_radius = 6
    icon_path = /usr/share/icons/Papirus-Dark/48x48/apps/:/usr/share/icons/Papirus-Dark/48x48/status/:/usr/share/icons/Papirus-Dark/48x48/devices/

    # History
    sticky_history = yes
    history_length = 20

    # Interaction
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all
    dmenu = /usr/bin/rofi -dmenu -p dunst
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    ignore_dbusclose = false
    sort = yes
    idle_threshold = 120

[experimental]
    per_monitor_dpi = false

[urgency_low]
    background = "@BG@"
    foreground = "@FG@"
    frame_color = "@BG_HIGHLIGHT@"
    highlight = "@FG_DARK@"
    timeout = 5

[urgency_normal]
    background = "@BG@"
    foreground = "@FG@"
    frame_color = "@ACCENT@"
    highlight = "@ACCENT@"
    timeout = 10

[urgency_critical]
    background = "@BG@"
    foreground = "@FG@"
    frame_color = "@RED@"
    highlight = "@RED@"
    timeout = 0

